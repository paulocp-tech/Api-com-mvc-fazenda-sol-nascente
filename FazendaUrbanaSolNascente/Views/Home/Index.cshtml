                <a href="https://www.instagram.com" target="_blank" class="social-icon"><i class="fab fa-instagram"></i></a>
                <a href="https://www.linkedin.com" target="_blank" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
        </div>
        <p class="text-center mt-4">&copy; 2024 Sua Empresa. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>

    <script>
        (function () { emailjs.init("ZkavSmkak5mJl9kmw");         // Substitua SEU_USER_ID pelo seu User ID do EmailJS
        })();

        function enviarEmail(event) {
            event.preventDefault(); // Impede o envio padrão do formulário

            // Dados do formulário
            const emailCliente = document.getElementById("email").value;
            const reclamacao = document.getElementById("reclamacao").value;

            // Parâmetros para o template
            const templateParams = {
                email: emailCliente,
                mensagem: reclamacao
            };

            // Envia o e-mail usando EmailJS
            emailjs.send("service_o66mold", "template_lv8mwf1", templateParams)
                .then(function (response) {
                    alert("Reclamação enviada com sucesso!");
                    closePopup();
                }, function (error) {
                    alert("Erro ao enviar a reclamação: " + error.text);
                });
        }

        // Função para abrir o popup
        function showPopup() {
            document.getElementById('popupOverlay').classList.add('active');
            document.getElementById('popupForm').classList.add('active');
        }

        // Função para fechar o popup
        function closePopup() {
            document.getElementById('popupOverlay').classList.remove('active');
            document.getElementById('popupForm').classList.remove('active');
        }

        document.getElementById('showPopup').addEventListener('click', showPopup);
        document.getElementById('popupOverlay').addEventListener('click', closePopup);
    </script>


</body>
</html>